{
  "name": "navio-blsct",
  "version": "1.1.9",
  "description": "BLS Confidential Transaction library for Navio blockchain",
  "scripts": {
    "install": "node scripts/build.js && node-gyp configure build && npm run build:ts",
    "build:ts": "tsc",
    "build:wasm": "node scripts/build-wasm.js",
    "build:browser": "npm run build:wasm && tsc -p tsconfig.browser.json && node scripts/fix-browser-build.js",
    "docs": "typedoc",
    "docs:watch": "nodemon --watch src --ext ts --exec \"npx typedoc\"",
    "test": "tsc && NODE_OPTIONS=--expose-gc jest --runInBand --verbose",
    "test:browser": "npm run build:browser && NODE_OPTIONS='--experimental-vm-modules' jest --config jest.browser.config.cjs"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/browser/index.browser.d.ts",
        "import": "./dist/browser/index.browser.js"
      },
      "node": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "./browser": {
      "types": "./dist/browser/index.browser.d.ts",
      "import": "./dist/browser/index.browser.js"
    },
    "./wasm/blsct.mjs": {
      "types": "./wasm/blsct.d.mts",
      "import": "./wasm/blsct.mjs"
    },
    "./wasm/blsct.js": "./wasm/blsct.js",
    "./wasm/blsct.wasm": "./wasm/blsct.wasm",
    "./wasm/*": "./wasm/*"
  },
  "sideEffects": false,
  "browser": {
    "./dist/index.js": "./dist/browser/index.browser.js",
    "./dist/blsct.js": "./dist/browser/blsct.browser.js",
    "./dist/managedObj.js": "./dist/browser/managedObj.browser.js"
  },
  "files": [
    "dist",
    "src",
    "wasm",
    "scripts",
    "swig",
    "binding.gyp",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "typedoc": "^0.28.9"
  },
  "dependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "navio",
    "blsct",
    "TypeScript",
    "JavaScript",
    "ffi",
    "c++",
    "bindings",
    "wasm",
    "webassembly",
    "browser",
    "BLS12-381",
    "confidential-transactions"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
