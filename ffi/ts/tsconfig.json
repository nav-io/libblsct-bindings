{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "module": "node16",
    "moduleResolution": "node16",
    "isolatedModules": true,

    "outDir": "./dist",
    "declaration": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    
    "skipLibCheck": true,
    "types": ["node"]

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
